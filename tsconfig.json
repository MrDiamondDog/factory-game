{
    "compilerOptions": {
        "outDir": "public/dist",
        "rootDir": "src",
        "noImplicitAny": true,
        "module": "ES2022",
        "target": "ES2022",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "paths": {
            "@util/*": ["./src/util/*"],
            "@type/*": ["./src/type/*"],
            "@canvas/*": ["./src/canvas/*"],
            "@objects/*": ["./src/objects/*"],
            "@economy/*": ["./src/economy/*"],
            "@/*": ["./src/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"]
}
